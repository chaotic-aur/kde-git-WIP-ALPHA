pkgname=ark
pkgver=24.01.75
pkgrel=1
pkgdesc='Archiving Tool'
arch=(x86_64)
url='https://apps.kde.org/ark/'
license=(GPL)
depends=(gcc-libs
         glibc
         kcompletion5
         kconfig5
         kconfigwidgets5
         kcoreaddons5
         kcrash5
         kdbusaddons5
         ki18n5
         kio5
         kjobwidgets5
         kparts5
         kpty5
         kservice5
         kwidgetsaddons5
         kwindowsystem5
         kxmlgui5
         libarchive
         libzip
         qt5-base
         zlib)
makedepends=(extra-cmake-modules
             kdoctools5)
optdepends=('arj: ARJ format support'
            'lrzip: LRZ format support'
            'lzop: LZO format support'
            'p7zip: 7Z format support'
            'unarchiver: RAR format support'
            'unrar: RAR decompression support')
groups=(kde-applications
        kde-utilities)
