pkgname=poxml
pkgver=24.01.85
pkgrel=1
pkgdesc='Translates DocBook XML files using gettext po files'
url='https://www.kde.org/'
arch=(x86_64)
license=(GPL LGPL FDL)
depends=(gcc-libs
         gettext
         glibc
         qt5-base)
makedepends=(extra-cmake-modules
             kdoctools5)
groups=(kde-applications
        kdesdk)
