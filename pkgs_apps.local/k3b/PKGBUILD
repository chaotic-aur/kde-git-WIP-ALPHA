pkgname=k3b
pkgver=24.01.75
pkgrel=1
epoch=1
pkgdesc='Feature-rich and easy to handle CD burning application'
arch=(x86_64)
url='https://apps.kde.org/k3b/'
license=(GPL)
depends=(ffmpeg
         flac
         gcc-libs
         glibc
         karchive5
         kauth5
         kbookmarks5
         kcmutils5
         kcompletion5
         kconfig5
         kconfigwidgets5
         kcoreaddons5
         kfilemetadata5
         ki18n5
         kiconthemes5
         kio5
         kjobwidgets5
         knewstuff5
         knotifications5
         knotifyconfig5
         kwidgetsaddons5
         kxmlgui5
         lame
         libburn # cdrskin
         libdvdread
         libkcddb5
         libmad
         libmpcdec
         libogg
         libsamplerate
         libsndfile
         libvorbis
         qt5-base
         qt5-webengine
         solid5
         taglib)
makedepends=(extra-cmake-modules
             kdoctools5)
optdepends=('cdparanoia: for CD ripping support' 
            'cdrdao: for disk-at-once (DAO) mode support'
            'cdrtools: for CD burning with cdrecord'
            'dvd+rw-tools: for DVD burning support'
            'emovix: for bootable multimedia CD/DVD support'
            'vcdimager: for VCD burning support')
groups=(kde-applications
        kde-multimedia)
