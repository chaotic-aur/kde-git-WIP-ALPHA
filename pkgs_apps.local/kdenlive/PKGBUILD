pkgname=kdenlive
pkgver=24.01.80
pkgrel=1
pkgdesc='A non-linear video editor for Linux using the MLT video framework'
arch=(x86_64)
url='https://apps.kde.org/kdenlive/'
license=(GPL)
depends=(breeze-icons
         frei0r-plugins
         gcc-libs
         glibc
         karchive5
         kbookmarks5
         kcodecs5
         kcompletion5
         kconfig5
         kconfigwidgets5
         kcoreaddons5
         kcrash5
         kdbusaddons5
         kfilemetadata5
         kguiaddons5
         ki18n5
         kiconthemes5
         kio5
         kitemviews5
         kjobwidgets5
         knewstuff5
         knotifications5
         knotifyconfig5
         ktextwidgets5
         kwidgetsaddons5
         kxmlgui5
         mlt
         purpose5
         qt5-base
         qt5-declarative
         qt5-multimedia
         qt5-networkauth
         qt5-quickcontrols2
         qt5-svg
         solid5)
makedepends=(doxygen
             extra-cmake-modules
             kdoctools5
             qt5-tools)
optdepends=('bigsh0t: VR360 effects'
            'dvgrab: for firewire capture'
            'ffmpeg: for FFmpeg plugin'
            'kimageformats5: support for dds, xcf, exr, psd, and more image formats'
            'mediainfo: for technical clip information'
            'noise-suppression-for-voice: noise suppression effect'
            'opencv: for motion tracking'
            'opentimelineio: timeline export/import'
            'plasma-desktop: theme configuration'
            'python: for scripts'
            'qt5-imageformats: support for tiff, webp, and more image formats'
            'recordmydesktop: for screen capture')
groups=(kde-applications
        kde-multimedia)
