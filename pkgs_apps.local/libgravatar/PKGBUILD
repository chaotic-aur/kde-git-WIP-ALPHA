pkgname=libgravatar
pkgver=24.01.90
pkgrel=1
pkgdesc='KDE PIM library providing Gravatar support'
arch=(x86_64)
url='https://kontact.kde.org'
license=(LGPL)
depends=(gcc-libs
         glibc
         kconfig
         kconfigwidgets
         ki18n
         ktextwidgets
         kwidgetsaddons
         pimcommon
         qt6-base)
makedepends=(doxygen
             extra-cmake-modules
             qt6-doc
             qt6-tools)
