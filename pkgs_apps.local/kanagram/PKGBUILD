pkgname=kanagram
pkgver=24.01.90
pkgrel=1
pkgdesc='Letter Order Game'
url='https://apps.kde.org/kanagram/'
arch=(x86_64)
license=(GPL LGPL FDL)
depends=(gcc-libs
         glibc
         kconfig
         kconfigwidgets
         kcoreaddons
         kcrash
         ki18n
         knewstuff
         kwidgetsaddons
         kxmlgui
         libkeduvocdocument
         qt6-base
         qt6-declarative
         qt6-speech
         sonnet)
makedepends=(extra-cmake-modules
             kdoctools)
groups=(kde-applications
        kde-education)
