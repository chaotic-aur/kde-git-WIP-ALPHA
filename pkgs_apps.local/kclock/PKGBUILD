pkgname=kclock
pkgver=24.01.90
pkgrel=1
pkgdesc='Clock app for Plasma Mobile'
url='https://apps.kde.org/kclock/'
arch=(x86_64)
license=(GPL LGPL)
depends=(gcc-libs
         glibc
         kconfig
         kcoreaddons
         kdbusaddons
         ki18n
         kirigami-addons
         knotifications
         kstatusnotifieritem
         libplasma
         qt6-base
         qt6-declarative
         qt6-multimedia
         qt6-svg)
makedepends=(extra-cmake-modules)
groups=(kde-applications
        utilities)
