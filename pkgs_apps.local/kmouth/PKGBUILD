pkgname=kmouth
pkgver=24.01.85
pkgrel=1
arch=(x86_64)
pkgdesc='Speech Synthesizer Frontend'
url='https://apps.kde.org/kmouth/'
license=(GPL FDL)
depends=(gcc-libs
         glibc
         kcompletion
         kconfig
         kconfigwidgets
         kcoreaddons
         ki18n
         kio
         kwidgetsaddons
         kxmlgui
         qt6-base
         qt6-speech)
makedepends=(extra-cmake-modules
             kdoctools)
groups=(kde-applications
        kde-accessibility)
