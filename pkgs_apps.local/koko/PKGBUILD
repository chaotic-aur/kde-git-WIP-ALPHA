pkgname=koko
pkgver=24.01.75
pkgrel=1
pkgdesc='Image gallery application'
url='https://apps.kde.org/koko/'
arch=(x86_64)
license=(GPL LGPL)
depends=(exiv2
         gcc-libs
         glibc
         kconfig
         kcoreaddons
         kdbusaddons
         kdeclarative # QML
         kfilemetadata
         kguiaddons
         ki18n
         kio
         kirigami
         knotifications
         kquickimageeditor # QML
         kwindowsystem
         libxcb
         qt6-base
         qt6-declarative
         qt6-positioning
         qt6-svg)
makedepends=(extra-cmake-modules)
groups=(kde-applications
        kde-graphics)
