prepare() {
  cp -L cities1000-2024-01-18.zip admin1CodesASCII-2024-01-18.txt $pkgname-$pkgver/src
}

build() {
  cmake -B build -S $pkgname \
    -DBUILD_TESTING=OFF
  cmake --build build
}

package() {
  DESTDIR="$pkgdir" cmake --install build
}

