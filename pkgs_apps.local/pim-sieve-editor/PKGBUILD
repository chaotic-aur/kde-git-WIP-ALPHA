pkgname=pim-sieve-editor
pkgver=24.01.90
pkgrel=1
pkgdesc='Mail sieve editor'
arch=(x86_64)
url='https://kontact.kde.org'
license=(GPL2)
depends=(gcc-libs
         glibc
         kbookmarks
         kcolorscheme
         kconfig
         kconfigwidgets
         kcoreaddons
         kcrash
         kdbusaddons
         ki18n
         kmailtransport
         kuserfeedback
         kwidgetsaddons
         kxmlgui
         libksieve
         pimcommon
         qt6-base
         qtkeychain-qt6)
makedepends=(extra-cmake-modules
             kdoctools)
groups=(kde-applications
        kde-pim)
