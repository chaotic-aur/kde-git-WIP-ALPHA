pkgname=merkuro
pkgver=24.01.85
pkgrel=1
pkgdesc='A calendar application using Akonadi to sync with external services'
arch=(x86_64)
url='https://apps.kde.org/merkuro.calendar/'
license=(GPL)
depends=(akonadi-calendar
         akonadi-contacts
         akonadi-mime
         gcc-libs
         glibc
         gpgme
         kcalendarcore
         kconfig
         kconfigwidgets
         kcontacts
         kcoreaddons
         kdbusaddons
         kdepim-runtime
         ki18n
         kidentitymanagement
         kio
         kirigami-addons
         kitemmodels
         kmime
         kwidgetsaddons
         kwindowsystem
         kxmlgui
         libakonadi
         libkleo
         mailcommon
         messagelib
         mimetreeparser
         qqc2-desktop-style 
         qt6-base
         qt6-declarative)
makedepends=(extra-cmake-modules
             libplasma)
conflicts=(kalendar)
replaces=(kalendar)
groups=(kde-applications
        kde-pim)
