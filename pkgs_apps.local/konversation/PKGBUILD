         kwidgetsaddons5
         kwindowsystem5
         kxmlgui5
         perl
         qca-qt5
         qt5-base
         qt5-multimedia)
optdepends=('keditbookmarks: for managing bookmarks'
            'python: python scripting support')
makedepends=(extra-cmake-modules
             kdoctools5)
groups=(kde-applications
        kde-network)
