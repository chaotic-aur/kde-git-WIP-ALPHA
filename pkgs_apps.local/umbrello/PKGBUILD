pkgname=umbrello
pkgver=24.01.90
pkgrel=1
pkgdesc='UML modeller'
arch=(x86_64)
url='https://apps.kde.org/umbrello/'
license=(GPL)
depends=(gcc-libs
         glibc
         karchive5
         kcompletion5
         kconfig5
         kconfigwidgets5
         kcoreaddons5
         kcrash5
         ki18n5
         kiconthemes5
         kio5
         kjobwidgets5
         ktexteditor5
         ktextwidgets5
         kwidgetsaddons5
         kxmlgui5
         libxml2
         libxslt
         qt5-base
         qt5-svg)
makedepends=(doxygen
             extra-cmake-modules
             kdoctools5)
groups=(kde-applications
        kdesdk)
