pkgname=ksmtp
pkgver=24.01.90
pkgrel=1
pkgdesc='Job-based library to send email through an SMTP server'
arch=(x86_64)
url='https://kontact.kde.org'
license=(LGPL)
depends=(gcc-libs
         glibc
         kcoreaddons
         ki18n
         kio
         libsasl
         qt6-base)
makedepends=(doxygen
             extra-cmake-modules
             qt6-doc
             qt6-tools)
