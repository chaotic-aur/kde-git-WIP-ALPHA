pkgname=analitza
pkgver=24.01.90
pkgrel=1
pkgdesc='A library to add mathematical features to your program'
url='https://www.kde.org/'
arch=(x86_64)
license=(GPL LGPL FDL)
depends=(gcc-libs
         glibc
         qt6-5compat
         qt6-base
         qt6-declarative
         qt6-svg)
makedepends=(eigen
             extra-cmake-modules
             kdoctools
             qt6-tools)
conflicts=(analitza5)
replaces=(analitza5)
