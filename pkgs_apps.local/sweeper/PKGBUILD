pkgname=sweeper
pkgver=24.01.75
pkgrel=1
pkgdesc='System Cleaner'
url='https://apps.kde.org/sweeper/'
arch=(x86_64)
license=(GPL LGPL FDL)
depends=(gcc-libs
         glibc
         kactivities-stats
         kbookmarks
         kconfig
         kconfigwidgets
         kcoreaddons
         kcrash
         ki18n
         ktextwidgets
         kwidgetsaddons
         kxmlgui
         qt6-base)
makedepends=(extra-cmake-modules
             kdoctools)
groups=(kde-applications
        kde-utilities)
