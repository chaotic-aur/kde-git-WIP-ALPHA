pkgname=kiten
pkgver=24.01.75
pkgrel=1
pkgdesc='Japanese Reference/Study Tool'
url='https://apps.kde.org/kiten/'
arch=(x86_64)
license=(GPL LGPL FDL)
depends=(gcc-libs
         glibc
         karchive5
         kcompletion5
         kconfig5
         kconfigwidgets5
         kcoreaddons5
         kcrash5
         ki18n5
         kio5
         knotifications5
         kwidgetsaddons5
         kxmlgui5
         qt5-base)
makedepends=(extra-cmake-modules
             kdoctools5)
groups=(kde-applications
        kde-education)
