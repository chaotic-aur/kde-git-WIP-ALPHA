arch=(x86_64)
url='https://kontact.kde.org'
license=(GPL2)
depends=(akonadi-contacts
         akonadi-search
         calendarsupport
         gcc-libs
         glibc
         kcalendarcore
         kcolorscheme
         kcompletion
         kconfig
         kconfigwidgets
         kcontacts
         kcoreaddons
         kcrash
         kdbusaddons
         ki18n
         kitemmodels
         kmime
         ktextwidgets
         kwidgetsaddons
         kxmlgui
         libakonadi
         libkdepim
         messagelib
         qt6-base
         xapian-core)
makedepends=(extra-cmake-modules
             kdoctools)
groups=(kde-applications
        kde-pim)
