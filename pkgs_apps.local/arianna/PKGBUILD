pkgname=arianna
pkgver=24.01.90
pkgrel=1
pkgdesc='EPub Reader for mobile devices'
url='https://apps.kde.org/arianna/'
arch=(x86_64)
license=(GPL LGPL FDL)
depends=(baloo
         gcc-libs
         glibc
         karchive
         kconfig
         kcoreaddons
         kdbusaddons
         kfilemetadata
         ki18n
         kirigami-addons
         kquickcharts
         kwindowsystem
         qqc2-desktop-style
         qt6-base
         qt6-declarative
         qt6-httpserver
         qt6-webengine)
makedepends=(extra-cmake-modules)
groups=(kde-applications
        kde-graphics)
