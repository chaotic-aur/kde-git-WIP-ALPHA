pkgname=kdesdk-kio
pkgver=24.01.90
pkgrel=1
pkgdesc='KDE SDK KIO-Slaves'
url='https://www.kde.org/'
arch=(x86_64)
license=(GPL LGPL FDL)
depends=(gcc-libs
         glibc
         kcoreaddons
         ki18n
         kio
         qt6-base
         perl)
makedepends=(extra-cmake-modules)
conflicts=(kdesdk-kioslaves)
replaces=(kdesdk-kioslaves)
groups=(kde-applications
        kdesdk)
