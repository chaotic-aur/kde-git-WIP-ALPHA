         libxcb
         qt5-base
         qt5-declarative
         qt5-graphicaleffects
         qt5-quickcontrols2
         qt5-x11extras
         qt5-xmlpatterns)
makedepends=(extra-cmake-modules
             kdoctools5
             libxkbfile)
groups=(kde-applications
        kde-education)
