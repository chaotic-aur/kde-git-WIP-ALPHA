arch=(x86_64)
license=(GPL LGPL FDL)
depends=(gcc-libs
         glibc
         kcmutils5
         kcompletion5
         kconfig5
         kconfigwidgets5
         kcoreaddons5
         ki18n5
         kitemviews5
         kqtquickcharts
         ktextwidgets5
         kwidgetsaddons5
         kxmlgui5
