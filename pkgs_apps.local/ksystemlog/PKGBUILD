pkgname=ksystemlog
pkgver=24.01.90
pkgrel=1
pkgdesc='System log viewer tool'
url='https://apps.kde.org/ksystemlog/'
arch=(x86_64)
license=(GPL LGPL FDL)
depends=(ktextwidgets audit
         gcc-libs
         glibc
         karchive
         kcolorscheme
         kcompletion
