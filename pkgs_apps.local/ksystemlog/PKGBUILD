pkgname=ksystemlog
pkgver=23.08.3
pkgrel=1
pkgdesc='System log viewer tool'
url='https://apps.kde.org/ksystemlog/'
arch=(x86_64)
license=(GPL LGPL FDL)
groups=(kde-applications kde-system)
depends=(ktextwidgets kio5)
makedepends=(extra-cmake-modules kdoctools5)
