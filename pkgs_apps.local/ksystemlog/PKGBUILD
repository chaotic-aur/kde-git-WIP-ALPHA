         kconfigwidgets
         kcoreaddons
         ki18n
         kio
         kitemviews
         ktextwidgets
         kwidgetsaddons
         kxmlgui
         qt6-5compat
         qt6-base
         systemd-libs)
makedepends=(extra-cmake-modules
             kdoctools)
groups=(kde-applications
        kde-system)
