         ki18n
         kiconthemes
         kidentitymanagement
         kio
         kitemmodels
         kmailtransport
         kmime
         kstatusnotifieritem
         ktextwidgets
         kwidgetsaddons
         kwindowsystem
         kxmlgui
         libassuan
         libgpg-error
         libkleo
         mimetreeparser
         qgpgme-qt6
         qt6-base
         sh)
makedepends=(extra-cmake-modules
             kdoctools)
groups=(kde-applications
        kde-pim)
