pkgname=kompare
pkgver=24.01.90
pkgrel=1
pkgdesc='Graphical file differences tool'
url='https://apps.kde.org/kompare/'
arch=(x86_64)
license=(GPL LGPL FDL)
depends=(gcc-libs
         glibc
         kcodecs5
         kcompletion5
         kconfig5
         kconfigwidgets5
         kcoreaddons5
         ki18n5
         kio5
         kjobwidgets5
         kparts5
         ktexteditor5
         kwidgetsaddons5
         kxmlgui5
         libkomparediff2
         qt5-base)
makedepends=(extra-cmake-modules
             kdoctools5)
groups=(kde-applications
        kdesdk)
