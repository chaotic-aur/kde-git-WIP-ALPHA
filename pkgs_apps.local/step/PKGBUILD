         kjobwidgets5
         knewstuff5
         kplotting5
         ktextwidgets5
         kwidgetsaddons5
         kxmlgui5
         libqalculate
         qt5-base)
makedepends=(eigen
             extra-cmake-modules
             kdoctools5
             python
             qt5-tools)
groups=(kde-applications
        kde-education)
