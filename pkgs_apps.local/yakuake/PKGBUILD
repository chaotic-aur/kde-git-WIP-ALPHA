pkgname=yakuake
pkgver=24.01.75
pkgrel=1
pkgdesc='A drop-down terminal emulator based on KDE konsole technology'
arch=(x86_64)
url='https://apps.kde.org/yakuake/'
license=(GPL)
depends=(gcc-libs
         glibc
         karchive
         kcolorscheme
         kconfig
         kconfigwidgets
         kcoreaddons
         kcrash
         kdbusaddons
         kglobalaccel
         ki18n
         kiconthemes
         kio
         knewstuff
         knotifications
         knotifyconfig
         konsole
         kparts
         kstatusnotifieritem
         kwayland
         kwidgetsaddons
         kwindowsystem
         kxmlgui
         libx11
         qt6-base)
makedepends=(extra-cmake-modules)
groups=(kde-applications
        kde-utilities)
