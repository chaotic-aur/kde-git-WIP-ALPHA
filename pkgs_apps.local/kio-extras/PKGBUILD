prepare() {
  sed -e 's|KF6ActivitiesStats ${KF_MIN_VERSION}|KF6ActivitiesStats|' -i $pkgname-kf6-$pkgver/CMakeLists.txt # Fix finding kactivities-stats
}

build() {
  cmake -B build -S $pkgname-kf6-$pkgver \
    -DLIBAPPIMAGE_LIBRARIES=libappimage.so \
    -DCMAKE_INSTALL_LIBEXECDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build
}

package() {
  DESTDIR="$pkgdir" cmake --install build
}

# sums-already-applied
sha256sums=('SKIP')
    
# source-already-applied
source=(git+https://github.com/KDE/${pkgname})
    
# pkgver-already-applied

pkgver() {
	cd ${srcdir}/${pkgname}
	echo $(git describe --long --tags --abbrev=7 | sed 's/\([^-]*-g\)/r\1/;s/-/./g;s/^v//')
}


