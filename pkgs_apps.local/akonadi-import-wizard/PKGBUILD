pkgname=akonadi-import-wizard
pkgver=24.01.75
pkgrel=1
pkgdesc='Import data from other mail clients to KMail'
arch=(x86_64)
url='https://kontact.kde.org'
license=(GPL2)
depends=(gcc-libs
         glibc
         kconfig
         kcontacts
         kcoreaddons
         kcrash
         kdbusaddons
         ki18n
         kidentitymanagement
         kmailtransport
         kwidgetsaddons
         kxmlgui
         libakonadi
         mailcommon
         mailimporter
         messagelib
         pimcommon
         qt6-base
         qtkeychain-qt6)
makedepends=(extra-cmake-modules
             kdoctools)
optdepends=('kdepim-addons: additional import plugins')
groups=(kde-applications
        kde-pim)
