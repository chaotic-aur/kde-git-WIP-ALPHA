pkgname=libkcompactdisc
pkgver=24.01.90
pkgrel=1
pkgdesc='A library for interfacing with CDs'
url='https://www.kde.org/'
arch=(x86_64)
license=(GPL LGPL FDL)
depends=(alsa-lib
         gcc-libs
         glibc
         ki18n
         phonon-qt6
         qt6-base
         solid)
makedepends=(extra-cmake-modules)
