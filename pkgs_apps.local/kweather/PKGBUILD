pkgname=kweather
pkgver=24.01.80
pkgrel=1
pkgdesc='Weather application for Plasma Mobile'
url='https://apps.kde.org/kweather/'
arch=(x86_64)
license=(GPL LGPL)
depends=(gcc-libs
         glibc
         kconfig
         kcoreaddons
         ki18n
         kirigami-addons
         kweathercore
         libplasma
         qt6-base
         qt6-charts
         qt6-declarative)
makedepends=(extra-cmake-modules)
groups=(kde-applications
        kde-utilities)
