         kiconthemes5
         kparts5
         ktexteditor5
         kwidgetsaddons5
         kxmlgui5
         python
         qt5-base
         qt5-svg
         qt5-xmlpatterns)
makedepends=(boost
             extra-cmake-modules
             kdoctools5)
groups=(kde-applications
        kde-education)
