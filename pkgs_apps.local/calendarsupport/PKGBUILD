pkgname=calendarsupport
pkgver=24.01.85
pkgrel=1
pkgdesc='Calendar support library'
arch=(x86_64)
url='https://kontact.kde.org'
license=(LGPL)
depends=(akonadi-calendar
         akonadi-notes
         gcc-libs
         glibc
         kcalendarcore
         kcalutils
         kcodecs
         kconfig
         kcoreaddons
         kguiaddons
         kholidays
         ki18n
         kidentitymanagement
         kio
         kmime
         kservice
         ktextaddons
         kwidgetsaddons
         libakonadi
         qt6-base)
makedepends=(doxygen
             extra-cmake-modules
             qt6-doc
             qt6-tools)
