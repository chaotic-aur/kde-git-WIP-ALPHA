pkgname=ktorrent
pkgver=24.01.80
pkgrel=1
pkgdesc='A powerful BitTorrent client for KDE'
arch=(x86_64)
url='https://apps.kde.org/ktorrent/'
license=(GPL2)
depends=(gcc-libs
         glibc
         karchive
         kcmutils
         kcompletion
         kconfig
         kconfigwidgets
         kcoreaddons
         kcrash
         kdbusaddons
         kglobalaccel
         ki18n
         kiconthemes
         kio
         knotifications
         knotifyconfig
         kparts
         kstatusnotifieritem
         ktextwidgets
         kwidgetsaddons
         kwindowsystem
         kxmlgui
         libmaxminddb
         libktorrent
         phonon-qt6
         qt6-5compat
         qt6-base
         qt6-webengine)
makedepends=(boost
             extra-cmake-modules
             kdnssd
             kdoctools
             kplotting
             syndication
             taglib)
optdepends=('kdnssd: zeroconf plugin'
            'kplotting: statistics plugin'
            'syndication: syndication plugin'
            'taglib: mediaplayer plugin')
groups=(kde-applications
        kde-network)
