pkgname=ktorrent
pkgver=24.01.75
pkgrel=1
pkgdesc='A powerful BitTorrent client for KDE'
arch=(x86_64)
url='https://apps.kde.org/ktorrent/'
license=(GPL2)
depends=(gcc-libs
         glibc
         karchive5
         kcmutils5
         kcompletion5
         kconfig5
         kconfigwidgets5
         kcoreaddons5
         kcrash5
         kdbusaddons5
         ki18n5
         kiconthemes5
         kio5
         knotifications5
         knotifyconfig5
         kparts5
         ktextwidgets5
         kwidgetsaddons5
         kwindowsystem5
         kxmlgui5
         libktorrent
         phonon-qt5
         qt5-base
         qt5-webengine)
makedepends=(boost
             extra-cmake-modules
             geoip
             kdnssd5
             kdoctools5
             kplotting5
             syndication5
             taglib)
optdepends=('geoip: info widget plugin'
            'kdnssd5: zeroconf plugin'
            'kplotting5: statistics plugin'
            'syndication5: syndication plugin'
            'taglib: mediaplayer plugin')
groups=(kde-applications
        kde-network)
