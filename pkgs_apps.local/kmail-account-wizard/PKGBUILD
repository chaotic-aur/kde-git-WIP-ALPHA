pkgname=kmail-account-wizard
pkgver=24.01.80
pkgrel=1
pkgdesc='KMail account wizard'
arch=(x86_64)
url='https://kontact.kde.org'
license=(GPL2)
depends=(gcc-libs
         glibc
         kconfig
         kcoreaddons
         kcrash
         kdbusaddons
         ki18n
         kidentitymanagement
         kmailtransport
         kmime
         libakonadi
         qt6-base
         qt6-declarative)
makedepends=(extra-cmake-modules
             kdoctools)
groups=(kde-applications
        kde-pim)
