pkgname=kget
pkgver=24.01.90
pkgrel=1
pkgdesc='Download Manager'
url='https://apps.kde.org/kget/'
arch=(x86_64)
license=(GPL LGPL FDL)
depends=(gcc-libs
         glibc
         gpgme
         qgpgme-qt6
         kcmutils
         kcolorscheme
         kcompletion
         kconfig
         kconfigwidgets
         kcoreaddons
         kdbusaddons
         kiconthemes
         ki18n
         kio
         kitemviews
         knotifications
         knotifyconfig
         kstatusnotifieritem
         kwallet
         kwidgetsaddons
         kwindowsystem
         kxmlgui
         qt6-base)
makedepends=(boost
             extra-cmake-modules
             kdoctools
             libktorrent
             libmms)
optdepends=('libktorrent: torrent support'
            'libmms: MMS support')
groups=(kde-applications
        kde-network)
