pkgname=kget
pkgver=24.01.75
pkgrel=1
pkgdesc='Download Manager'
url='https://apps.kde.org/kget/'
arch=(x86_64)
license=(GPL LGPL FDL)
depends=(gcc-libs
         glibc
         gpgme
         qgpgme-qt5
         kcmutils5
         kcompletion5
         kconfig5
         kconfigwidgets5
         kcoreaddons5
         kdbusaddons5
         kiconthemes5
         ki18n5
         kio5
         kitemviews5
         knotifications5
         knotifyconfig5
         kwallet5
         kwidgetsaddons5
         kwindowsystem5
         kxmlgui5
         qt5-base)
makedepends=(boost
             extra-cmake-modules
             kdoctools5
             kparts5
             libktorrent
             libmms)
optdepends=('libktorrent: torrent support'
            'libmms: MMS support')
groups=(kde-applications
        kde-network)
