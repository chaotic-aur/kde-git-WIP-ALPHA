pkgname=kmix
pkgver=24.01.90
pkgrel=1
pkgdesc='KDE volume control program'
url='https://apps.kde.org/kmix/'
arch=(x86_64)
license=(GPL LGPL FDL)
depends=(alsa-lib
         gcc-libs
         glibc
         kconfig5
         kconfigwidgets5
         kcoreaddons5
         kdbusaddons5
         kglobalaccel5
         ki18n5
         knotifications5
         kwidgetsaddons5
         kwindowsystem5
         libcanberra
         libpulse
         qt5-base
         kxmlgui5
         solid5)
makedepends=(extra-cmake-modules
             kdoctools5)
groups=(kde-applications
        kde-multimedia)
#source(https://download.kde.org/unstable/release-service/$pkgver/src/$pkgname-$pkgver.tar.xz{,.sig})
#sha256sums=('11173b5048441fd5f590b4ca18ab88a3b43fd478d904b1023242b63b73d4e916'
#            'SKIP')
#validpgpkeys=(CA262C6C83DE4D2FB28A332A3A6A4DB839EAA6D7  # Albert Astals Cid <aacid@kde.org>
