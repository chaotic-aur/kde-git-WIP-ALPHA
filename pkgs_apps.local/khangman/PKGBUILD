pkgname=khangman
pkgver=24.01.80
pkgrel=1
pkgdesc='Hangman Game'
url='https://apps.kde.org/khangman/'
arch=(x86_64)
license=(GPL LGPL FDL)
depends=(gcc-libs
         glibc
         kconfig
         kcoreaddons
         kcrash
         ki18n
         knewstuff
         kwidgetsaddons
         kxmlgui
         libkeduvocdocument
         qt6-base
         qt6-declarative)
makedepends=(extra-cmake-modules
             kdoctools)
groups=(kde-applications
        kde-education)
