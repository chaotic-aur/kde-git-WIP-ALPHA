         qt6-declarative
         qt6-multimedia # QML
         qt6-wayland
         wayland
         xcb-util
         xcb-util-cursor
         xcb-util-image)
makedepends=(extra-cmake-modules
             kdoctools
             plasma-wayland-protocols)
groups=(kde-applications
        kde-graphics)
