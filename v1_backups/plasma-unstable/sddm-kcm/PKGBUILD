pkgname=sddm-kcm
pkgver=5.27.80
_dirver=$(echo $pkgver | cut -d. -f1-3)
pkgrel=1
pkgdesc='KDE Config Module for SDDM'
arch=(x86_64)
url='https://kde.org/plasma-desktop/'
license=(GPL)
depends=(gcc-libs
         glibc
         karchive
         kauth
         kcmutils
         kconfig
         kcoreaddons
         ki18n
         kio
         knewstuff # QML
         kservice
         kwidgetsaddons
         qt6-base
         qt6-declarative
         sddm)
makedepends=(extra-cmake-modules
             kdoctools)
groups=(plasma)
