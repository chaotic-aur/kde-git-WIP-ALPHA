pkgname=kglobalacceld
pkgver=5.27.8
pkgrel=1
arch=(x86_64)
pkgdesc='Status Notifier for the Plasma Desktop'
url='https://kde.org/plasma-desktop/'
license=(LGPL)
depends=(kwindowsystem kconfig kcoreaddons kcrash kdbusaddons kglobalaccel kio kservice kjobwidgets)
makedepends=(git extra-cmake-modules kcmutils)
groups=(plasma)
