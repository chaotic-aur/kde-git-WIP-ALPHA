pkgname=kate
pkgver=23.08.1
pkgrel=1
arch=(x86_64)
license=(GPL LGPL FDL)
pkgdesc='Advanced text editor'
groups=(kde-applications kde-utilities)
url='https://apps.kde.org/kate/'
depends=(knewstuff ktexteditor kactivities kuserfeedback hicolor-icon-theme)
optdepends=('konsole: open a terminal in Kate'
            'clang: C and C++ LSP support'
            'python-lsp-server: Python LSP support'
            'texlab: LaTeX LSP support'
            'rust: Rust LSP support'
            'git: git-blame plugin')
makedepends=(git git git git git extra-cmake-modules kdoctools)
conflicts=(kwrite)
provides=(kwrite)
replaces=(kwrite)
#source(https://download.kde.org/stable/release-service/$pkgver/src/$pkgname-$pkgver.tar.xz{,.sig})
#sha256sums=('ef7e73eff86421e77a3502f353e1f30f50303b3e0313fd76b4c52f014cbc4f7d'
#            'SKIP')
#validpgpkeys=(CA262C6C83DE4D2FB28A332A3A6A4DB839EAA6D7  # Albert Astals Cid <aacid@kde.org>
#              F23275E4BF10AFC1DF6914A6DBD2CE893E2D1C87  # Christoph Feck <cfeck@kde.org>
#              D81C0CB38EB725EF6691C385BB463350D6EF31EF) # Heiko Becker <heiko.becker@kde.org>

build() {
  cmake -B build -S $pkgname -DBUILD_WITH_QT6=ON -DQT_MAJOR_VERSION=6 \
    -DBUILD_TESTING=OFF
  cmake --build build
}

package() {
  DESTDIR="$pkgdir" cmake --install build
}

#sha256sums('SKIP')

pkgver() {
	cd ${srcdir}/${pkgname}
	echo "9999.r$(git rev-list --count HEAD).c$(git rev-parse --short=8 HEAD).${pkgrel}"
}


