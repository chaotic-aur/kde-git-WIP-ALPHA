pkgname=telepathy-kde-call-ui
_pkgname=ktp-call-ui
pkgver=23.04.3
pkgrel=1
pkgdesc='Voice/Video Call UI for Telepathy'
arch=(x86_64)
url='https://community.kde.org/KTp'
license=(GPL)
groups=(kde-applications kde-network telepathy-kde)
depends=(telepathy-kde-common-internals qt-gstreamer phonon-qt6)
makedepends=(git git git extra-cmake-modules boost)
#source(https://download.kde.org/stable/release-service/$pkgver/src/$_pkgname-$pkgver.tar.xz{,.sig})
#sha256sums=('fe20ffbefeaa828af69bc65d0786be980b8b7a9a6539dfd04c4e7c2d6151e5bf'
#            'SKIP')
#validpgpkeys=(CA262C6C83DE4D2FB28A332A3A6A4DB839EAA6D7  # Albert Astals Cid <aacid@kde.org>
