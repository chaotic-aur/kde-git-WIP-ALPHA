pkgname=telepathy-kde-send-file
_pkgname=ktp-send-file
pkgver=23.04.3
pkgrel=1
pkgdesc='A File manager plugin to launch a file transfer job with a specified contact'
arch=(x86_64)
url='https://community.kde.org/KTp'
license=(GPL)
groups=(kde-applications kde-network telepathy-kde)
depends=(telepathy-kde-common-internals)
makedepends=(git git git extra-cmake-modules kdoctools)
#source(https://download.kde.org/stable/release-service/$pkgver/src/$_pkgname-$pkgver.tar.xz{,.sig})
#sha256sums=('abb2abfb3833c6228b635386ffa4b77a70653e840a44b73ad69e6f84224273c2'
