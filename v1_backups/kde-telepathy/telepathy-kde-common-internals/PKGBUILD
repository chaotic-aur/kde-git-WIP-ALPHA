build() {
  cmake -B build -S $_pkgname -DBUILD_WITH_QT6=ON -DQT_MAJOR_VERSION=6  \
    -DCMAKE_INSTALL_LIBEXECDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build
}

package() {
  DESTDIR="$pkgdir" cmake --install build
}

#sha256sums('SKIP')

pkgver() {
	cd ${srcdir}/${pkgname}
	echo "9999.r$(git rev-list --count HEAD).c$(git rev-parse --short=8 HEAD).${pkgrel}"
}


