pkgname=kidletime
pkgver=5.248.0
pkgrel=1
pkgdesc='Monitoring user activity'
arch=(x86_64)
url='https://community.kde.org/Frameworks'
license=(LGPL)
depends=(gcc-libs
         glibc
         qt6-base)
makedepends=(doxygen
             extra-cmake-modules
             libxss
             plasma-wayland-protocols
             qt6-doc
             qt6-tools
             qt6-wayland
             wayland-protocols)
optdepends=('libx11: XCB plugin'
            'libxcb: XCB plugin'
            'libxext: XCB plugin'
            'libxss: XCB plugin'
            'qt6-wayland: Wayland plugin'
            'wayland: Wayland plugin')
groups=(kf6)
