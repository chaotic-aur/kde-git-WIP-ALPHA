pkgname=bluedevil
pkgver=5.90.0
_dirver=$(echo $pkgver | cut -d. -f1-3)
pkgrel=1
epoch=1
pkgdesc='Integrate the Bluetooth technology within KDE workspace and applications'
arch=(x86_64)
url='https://kde.org/plasma-desktop/'
license=(GPL2)
depends=(bluez-qt
         gcc-libs
         glibc
         kcmutils
         kconfig
         kcoreaddons
         kdbusaddons
         ki18n
         kio
         kjobwidgets
         knotifications
         kservice
         kwidgetsaddons
         kwindowsystem
         libplasma # QML
         qt6-base
         qt6-declarative)
makedepends=(extra-cmake-modules
             kdoctools)
optdepends=('pulseaudio-bluetooth: to connect to A2DP profile')
groups=(plasma)
