pkgname=breeze-gtk
pkgver=5.90.0
_dirver=$(echo $pkgver | cut -d. -f1-3)
pkgrel=1
pkgdesc='Breeze widget theme for GTK 2 and 3'
arch=(any)
url='https://kde.org/plasma-desktop/'
license=(LGPL)
depends=()
makedepends=(breeze
             extra-cmake-modules
             python-cairo
             sassc)
groups=(plasma)
