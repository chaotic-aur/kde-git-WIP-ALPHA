pkgname=ocean-sound-theme
pkgdesc='Ocean Sound Theme for Plasma'
pkgver=5.92.0
_dirver=$(echo $pkgver | cut -d. -f1-3)
pkgrel=1
arch=(any)
url='https://kde.org/plasma-desktop/'
license=(LGPL)
depends=()
makedepends=(extra-cmake-modules
             qt6-base)
groups=(plasma)
