pkgname=kscreen
pkgver=5.27.80
_dirver=$(echo $pkgver | cut -d. -f1-3)
pkgrel=1
pkgdesc='KDE screen management software'
arch=(x86_64)
url='https://kde.org/plasma-desktop/'
license=(LGPL)
depends=(gcc-libs
         glibc
         kcmutils
         kconfig
         kcoreaddons
         kdbusaddons
         kglobalaccel
         ki18n
         kwindowsystem
         kxmlgui
         layer-shell-qt
         libkscreen
         libx11
         libxcb
         libxi
         plasma-framework
         qt6-base
         qt6-declarative
         qt6-sensors)
makedepends=(extra-cmake-modules)
groups=(plasma)
#source(https://download.kde.org/unstable/plasma/$_dirver/$pkgname-$pkgver.tar.xz{,.sig})
