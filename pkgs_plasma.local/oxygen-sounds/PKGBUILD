pkgname=oxygen-sounds
pkgdesc='The Oxygen Sound Theme'
pkgver=5.27.80
_dirver=$(echo $pkgver | cut -d. -f1-3)
pkgrel=1
arch=(any)
url='https://kde.org/plasma-desktop/'
license=(LGPL)
depends=()
makedepends=(extra-cmake-modules)
groups=(plasma)
