# Maintainer: Antonio Rojas <arojas@archlinux.org>

pkgname=kidentitymanagement
pkgver=24.01.75
pkgrel=1
pkgdesc='Library to assist in handling user identities'
arch=(x86_64)
url='https://kontact.kde.org'
license=(LGPL)
depends=(gcc-libs
         glibc
         kcodecs
         kcompletion
         kconfig
         kcoreaddons
         ki18n
         kio
         kpimtextedit
         ktextaddons
         kwidgetsaddons
         kxmlgui
         qt6-base)
makedepends=(doxygen
             extra-cmake-modules
             kirigami-addons
             ktextwidgets
             qt6-tools)
optdepends=('kirigami-addons: QML bindings'
            'qt6-declarative: QML bindings')
