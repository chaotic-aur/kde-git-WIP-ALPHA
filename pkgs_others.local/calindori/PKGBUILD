pkgname=calindori
pkgver=23.08.3
pkgrel=1
pkgdesc='Calendar for Plasma Mobile'
url='https://apps.kde.org/calindori/'
arch=(x86_64)
license=(GPL LGPL)
depends=(kirigami2 qt5-svg kcalendarcore5 kpeople5 knotifications5 kdbusaddons5)
makedepends=(extra-cmake-modules)
