# Maintainer: Antonio Rojas <arojas@archlinux.org>

pkgname=kmime
pkgver=24.01.75
pkgrel=1
pkgdesc='Library for handling mail messages and newsgroup articles'
arch=(x86_64)
url='https://kontact.kde.org'
license=(LGPL)
depends=(gcc-libs
         glibc
         kcodecs
         ki18n
         qt6-base)
makedepends=(doxygen
             extra-cmake-modules
             qt6-tools)
