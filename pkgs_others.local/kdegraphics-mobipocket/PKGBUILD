pkgbase=kdegraphics-mobipocket
pkgname=(kdegraphics-mobipocket
         kdegraphics-mobipocket5)
pkgver=24.01.75
pkgrel=1
pkgdesc='A library to handle mobipocket files'
url='https://apps.kde.org/es/kdegraphics_mobipocket/'
arch=(x86_64)
license=(GPL LGPL FDL)
depends=(gcc-libs
         glibc)
makedepends=(extra-cmake-modules
             qt5-base
             qt6-5compat
             qt6-base)
#source(https://download.kde.org/unstable/release-service/$pkgver/src/$pkgname-$pkgver.tar.xz{,.sig})
#sha256sums=('06ef4e9468708ea411a367880e558caf9dfdcd3c8ffa585f68f1ef92033b4e2d'
#            'SKIP')
#validpgpkeys=(CA262C6C83DE4D2FB28A332A3A6A4DB839EAA6D7  # Albert Astals Cid <aacid@kde.org>
#              F23275E4BF10AFC1DF6914A6DBD2CE893E2D1C87  # Christoph Feck <cfeck@kde.org>
#              D81C0CB38EB725EF6691C385BB463350D6EF31EF) # Heiko Becker <heiko.becker@kde.org>

build() {
  cmake -B build -S $pkgname \
    -DBUILD_TESTING=OFF \
    -DQT_MAJOR_VERSION=6
  cmake --build build

  cmake -B build5 -S $pkgname \
    -DBUILD_TESTING=OFF
  cmake --build build5
}

package_kdegraphics-mobipocket() {
  depends+=(qt6-5compat
            qt6-base)

  DESTDIR="$pkgdir" cmake --install build
}

package_kdegraphics-mobipocket5() {
  depends+=(qt5-base)

  DESTDIR="$pkgdir" cmake --install build5
}

# sums-already-applied
sha256sums=('SKIP')
    
# source-already-applied
source=(git+https://github.com/KDE/${pkgname})
    
# pkgver-already-applied

pkgver() {
	cd ${srcdir}/${pkgname}
	echo $(git describe --long --tags --abbrev=7 | sed 's/\([^-]*-g\)/r\1/;s/-/./g;s/^v//')
}


