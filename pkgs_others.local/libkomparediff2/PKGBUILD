pkgname=libkomparediff2
pkgver=24.01.75
pkgrel=1
pkgdesc='Library to compare files and strings'
url='https://www.kde.org/'
arch=(x86_64)
license=(GPL LGPL FDL)
depends=(gcc-libs
         glibc
         kconfig5
         kconfigwidgets5
         kcoreaddons5
         ki18n5
         kio5
         kxmlgui5
         qt5-base)
makedepends=(extra-cmake-modules)
