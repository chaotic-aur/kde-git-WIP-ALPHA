pkgname=libktorrent
pkgver=24.01.80
pkgrel=1
pkgdesc='A BitTorrent protocol implementation'
arch=(x86_64)
url='https://apps.kde.org/ktorrent/'
license=(GPL2)
depends=(gcc-libs
         glibc
         gmp
         karchive
         kconfig
         kcoreaddons
         ki18n
         kio
         libgcrypt
         qt6-5compat
         qt6-base)
makedepends=(boost
             doxygen
             extra-cmake-modules)
#source(https://download.kde.org/unstable/release-service/$pkgver/src/$pkgname-$pkgver.tar.xz{,.sig})
#sha256sums=('957663130f6080fa772d5e7766555a34f28014586c260b2065301e2c6f014691'
#            'SKIP')
#validpgpkeys=(CA262C6C83DE4D2FB28A332A3A6A4DB839EAA6D7  # Albert Astals Cid <aacid@kde.org>
