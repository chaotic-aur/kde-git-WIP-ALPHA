pkgname=libktorrent
pkgver=24.01.75
pkgrel=1
pkgdesc='A BitTorrent protocol implementation'
arch=(x86_64)
url='https://apps.kde.org/ktorrent/'
license=(GPL2)
depends=(gcc-libs
         glibc
         gmp
         karchive5
         kconfig5
         kcoreaddons5
         ki18n5
         kio5
         libgcrypt
         qt5-base)
makedepends=(boost
             doxygen
             extra-cmake-modules)
#source(https://download.kde.org/unstable/release-service/$pkgver/src/$pkgname-$pkgver.tar.xz{,.sig})
#sha256sums=('29665b4083dcacc67989951d140180dc5429f6695022865d6fad8bc622914c6a'
#            'SKIP')
#validpgpkeys=(CA262C6C83DE4D2FB28A332A3A6A4DB839EAA6D7  # Albert Astals Cid <aacid@kde.org>
