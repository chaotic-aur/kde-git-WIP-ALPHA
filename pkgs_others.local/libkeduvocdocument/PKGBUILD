pkgname=libkeduvocdocument
pkgver=23.08.3
pkgrel=1
pkgdesc='Common libraries for KDE Edu applications'
url='https://www.kde.org/'
arch=(x86_64)
license=(GPL LGPL FDL)
depends=(kio5 kdeedu-data)
makedepends=(extra-cmake-modules kdoctools5)
