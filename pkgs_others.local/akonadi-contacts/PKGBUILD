pkgname=akonadi-contacts
pkgver=24.01.75
pkgrel=1
pkgdesc='Libraries and daemons to implement Contact Management in Akonadi'
arch=(x86_64)
url='https://kontact.kde.org'
license=(LGPL)
depends=(gcc-libs
         glibc
         grantleetheme
         ki18n
         kcodecs
         kcolorscheme
         kcompletion
         kconfig
         kconfigwidgets
         kcontacts
         kcoreaddons
         kiconthemes
         kio
         kmime
         ktextaddons
         ktexttemplate
         ktextwidgets
         kwidgetsaddons
         kxmlgui
         libakonadi
         prison
         qt6-base)
makedepends=(doxygen
             extra-cmake-modules
             qt6-doc
             qt6-tools)
